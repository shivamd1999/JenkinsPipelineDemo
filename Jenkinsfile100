pipeline{
    agent any
    
    stages{
        stage("Build number "){
        options { timestamps ()}
            steps{
                echo "The build number is ${env.BUILD_NUMBER} ${env.BUILD_DURATION}"
            }
        }
        stage("Jobs Name"){
        options { timestamps ()}
            steps{
                echo "The Jobs name is ${env.JOB_NAME}"                                              
            }
        }
        stage("Build URL"){
        options { timestamps ()}
            steps{
                echo "The Build URL is ${env.BUILD_URL}"                                               
            }
        }
        stage("Dates"){
        options { timestamps ()}
            steps{
                echo "The Updated date ${new Date()}"                                                
            }
        }
        stage("Build Duration"){
        options { timestamps ()}
            steps{
                echo "The Build Duration is  ${currentBuild.durationString}"                                               
            }
        }
    }     
}
