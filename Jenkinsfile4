pipeline {
    agent any
        stages {
        stage('Bulding') {
            steps {
                bat 'shivam.py'
            }
        }
    }
    post {
        always {
            
                echo 'Status of build'
                emailext attachLog:true,
                subject: "Jenkins Pipeline Build Status",

                body:"${currentBuild.currentResult}: Job ${JOB_NAME} build ${BUILD_NUMBER}\n ${currentBuild.currentResult}: Job ${JOB_NAME} \n ${currentBuild.currentResult}: ${BUILD_TAG}",

                to:'jagarwalj1998@gmail.com'
        }
    }
}

