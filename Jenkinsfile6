pipeline {
    agent any
        stages {
        stage('Bulding') {
            steps {
                bat 'shivam.py'
            }
        }
    }
    post {
        always {
            
                echo 'Status of build'
                emailext attachLog:true,
                subject: "Jenkins Pipeline Build Status",

                body:"${currentBuild.currentResult}: Job Name- ${JOB_NAME}\n Build ID- ${BUILD_ID}\n Build Number- ${BUILD_NUMBER}\n Build URL- ${BUILD_URL}\n ${BUILD_TAG}\n",

                to:'dubeyshivam264@gmail.com'
                               
        }
    }
}




