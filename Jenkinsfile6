pipeline {
    agent any
        stages {
        stage('Bulding') {
            steps {
                bat 'shivam.py'
            }
        }
    }
    post {
        always {
            
                echo 'Status of build'
                emailext attachLog:true,
                subject: "Jenkins Pipeline Build Status",

                body:"${currentBuild.currentResult}: Job ${JOB_NAME} \n Build ${BUILD_NUMBER}\n ${BUILD_URL}\n${BUILD_TAG}",

                to:'dubeyshivam264@gmail.com'
                               
        }
    }
}




