pipeline {
    agent any
        stages {
        stage('Bulding') {
            steps {
                bat 'shivam.py'
            }
        }
    }
    post {
        always {
            
                echo 'Status of build'
                
           
                body:"${currentBuild.currentResult}: Job ${JOB_NAME} build ${BUILD_NUMBER}\n ${currentBuild.currentResult}: Job ${JOB_NAME} \n ${currentBuild.currentResult}: ${BUILD_TAG} \n ${FILE,path="email.html"}",

                to:'dubeyshivam264@gmail.com'

                
        }
    }
}




