pipeline {
    agent any
        stages {
        stage('Bulding') {
            steps {
                bat 'shivam.py'
            }
        }
    }
    post {
        always {
            
                echo 'Status of build'
                emailext attachLog:true,
                emailext mimeType: 'text/html',
                subject: "Jenkins Pipeline Build Status",

                body:"${currentBuild.currentResult}: Job ${JOB_NAME} build ${BUILD_NUMBER}\n ${BUILD_TAG} \n Html ${FILE, path="email.html"}",

                to:'dubeyshivam264@gmail.com'
                               
        }
    }
}




