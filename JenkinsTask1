pipeline {
    agent any

    stages {
        stage('build') {
            steps {
                echo 'building'
                build job: "Sample_project2", parameters[string(name: "var", value: "${Build_NUMBER})]
            }
        }
        stage('test') {
            steps {
                echo 'Testing'
            }
        }
        stage('Moniter') {
            steps {
                echo 'monitering'
            }
        }
        stage('deploy') {
            steps {
                echo 'deploying'
            }
        }
    }
}
