pipeline {
    agent {label 'Slave'}
    stages {
        stage('Test') {
            steps {
                echo 'Testing'
            }
        }
        parallel {
            stage('Parallel Release') {
                    steps {
                        echo 'Releasing'
                    }
                }   
            stage('Parallel Test1') {
            agent {label 'Slave'}
                steps {
                echo 'Testing'
                build(job: "Sample_Projects1")
                }
            }
            stage('Parallel Release1') {
            agent {label 'Slave'}
                steps {
                    echo 'Releasing'
                    build(job: 'Sample_Projects4')
                }
            } 
        }
    }    
}
